    <div class="search_ctr">
      <form action="/users/search">
        <div class="form-group">
          <label for="">Gender</label>
          <select name="gender"  placeholder='gender'>
            <option value="" default></option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="">Orientation</label>
          <select name="orientation" >
            <option value="" default></option>
            <option value="heterosexual">Straight</option>
            <option value="homosexual">Gay</option>
            <option value="bisexual">Bi</option>
          </select>
        </div>

        <div class="form-group">
          <label for="location">location</label>
          <input name="location" type="text" placeholder="Postcode">
          <label>Within</label>
          <select name="distance" >
            <option value="5">5kms</option>
            <option value="15">15kms</option>
            <option value="50">50kms</option>
            <option value="100">100kms</option>
            <option value="250">250kms</option>
          </select>
        </div>

        <div class="form-group">
          <label for="location">Age:</label>
          <label for="location">min</label>
          <select name="minAge" >
            <option value="" default></option>
            <option value="18">18</option>
            <option value="21">21</option>
            <option value="25">25</option>
            <option value="30">30</option>
            <option value="35">35</option>
            <option value="40">40</option>
            <option value="50">50</option>
            <option value="60">60</option>
          </select>

          <label for="location">max</label>
          <select name="maxAge">
            <option value="" default></option>
            <option value="18">18</option>
            <option value="21">21</option>
            <option value="25">25</option>
            <option value="30">30</option>
            <option value="35">35</option>
            <option value="40">40</option>
            <option value="50">50</option>
            <option value="60">60</option>
          </select>
        </div>

        <div class="form-group">
          <input type="submit">
        </div>

      </form>
    </div>
  </div>
